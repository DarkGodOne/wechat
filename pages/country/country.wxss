/* pages/country/country.wxss */
.pages {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.Title {
  text-align: center;
  line-height: 60rpx;
}

.Container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.Country {
  flex-direction:column;
  text-align: center;
}

.select-Country {
  width: 168rpx;
  height: 168rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  border-radius: 30%;
}

.table{
  width: 95%;
  margin-top: 30rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.tb{
  float: left;
  width: 33.333333%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border:2rpx solid #ccc; 
  font-size: 10pt;
  height: 3rem;
}

.th {
  width: 33.333333%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  align-items: center;
  font-size: 10pt;
}

