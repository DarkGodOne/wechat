/* pages/country/America/Questionnaire.wxss */
.pages {
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align:top;
}

.tab{
  float: left; 
  width: 33.3333%;
  text-align: center;
  padding: 10rpx 0;
  border-bottom: 4rpx solid #ccc;
  border-top: 2rpx solid #ccc; 
}

.tabBorer{
  border-bottom: 4rpx solid #f00;
  border-top: 2rpx solid #f00; 
  color: #f00;
}

.Title{
  zoom: 1;
  width: 100%;
}

.Title:after{
  content: ""; 
  clear: both;
  display: block;
}

.swiper{
  display: block;
  width: 100%;
  height: 1100rpx;
  overflow: hidden;
}

.swiper_con{
  display: flex;
  flex-direction: column;
  text-align: left; 
  width: 100%; 
  height: 1080rpx;
  padding: 20rpx 0;
}

.p{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  margin-top: 30rpx;
  font-size: 15pt;
  background: #8cF;
}

.li{
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  font-size: 12pt;
}

.li2{
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  font-size: 12pt;
  background:#ccc;
}

.lii{
  margin-left: 80rpx;
  margin-right: 80rpx;
  margin-bottom: 20rpx;
  font-size: 10pt;
  background:#ff0;
}

.lii2{
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-bottom: 10rpx;
  font-size: 10pt;
  background: #8cF;
}

.notice{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 0rpx;
  font-size: 12pt;
  color: #f00;
  background: #ff0;
}

.table{
  width: 95%;
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.tb{
  float: left;
  width: 33.333333%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border:2rpx solid #ccc; 
  font-size: 10pt;
  height: 2rem;
}

.tb2{
  float: left;
  width: 50%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border:2rpx solid #ccc; 
  font-size: 10pt;
  height: 1rem;
}

.th {
  width: 33.333333%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  align-items: center;
  font-size: 10pt;
}


.th2 {
  width: 50%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  align-items: center;
  font-size: 10pt;
}

